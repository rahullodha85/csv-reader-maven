pipeline {
    agent any
    tools {
        maven 'Maven 3.6.0'
        jdk 'jdk8'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH=${PATH}"
                    echo M2_HOME=${M2_HOME}"
                   '''
            }
        }
        stage('Test') {
            agent { docker maven '3.6.0' }
            steps {
                echo 'Running UnitTest'
                mvn 'mvn clean test'
            }
        }
    }
}